<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="Dashboard">
		<div class="oh_dashboards">
			<div class="container-fluid my-5 o_hr_dashboard"/>
			<h1></h1>
		</div>
	</t>
	<t t-name="ProjectTaskLineGraph">
		<div class="row mt-5 px-4" id="graphs">
			<div class="year_to_date_graph_div col-sm-12 col-md-6 my-4">
				<div class="chart-container card-shadow" id="tiles">
					<div style="height: 20px; max-height: 20px;">
						<h2>Projects</h2>
						<div class="form-group col-2"
                                 id="top_product_button">
							<select id="project_task_selection"
                                        class="btn btn-primary">
								<option id="all"
											value="all"
											selected="selected">All</option>
								<option id="this_week"
                                            value="this_week"
                                            >This Week</option>
								<option id="last_week"
                                            value="last_week">Last Week</option>
								<option id="this_month"
										value="this_month">This Month</option>
								<option id="last_month"
								value="last_month">Last Month</option>
							</select>
						</div>
					</div>
					<hr/>
					<div class="graph_canvas" style="margin-top: 30px;">
						<canvas id="canvaspie" height="500px"
                                    width="150px"/>
					</div>
				</div>
			</div>
			<div class="year_to_date_graph_div col-sm-12 col-md-6 my-4">
				<div class="chart-container card-shadow" id="tiles">
					<div style="height: 20px; max-height: 20px;">
						<h2>Task details</h2>
						<div class="form-group col-2"
                                 id="top_product_button">
							<select id="assignee_selection"
                                        class="btn btn-primary">
								<option id="all"
											value="all"
											selected="selected">All</option>
							</select>
						</div>
						<table class="graph_details_table" id="category_table">
							<tr>
								<th>Task</th>
								<th>Assignee</th>
								<th>Create Date</th>
								<th>Due Date</th>
								<th>Project</th>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>
	</t>
</templates>

